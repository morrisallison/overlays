{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./lib"
  },
  "include": [
    "src/**/*"
  ]
}
